<?xml version="1.0" encoding="UTF-8"?>
<Context>
   <!-- ToomCat Pool Settings -->
	<Resource 
		name="jdbc/pool"
		auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.jdbc.Driver"
        initialSize="15"
        maxActive="1000" 
		maxIdle="500"
		minIdle="100"
		validationInterval="30000"
		testOnBorrow="true"
        testWhileIdle="true"
        validationQuery="select version()"
        url="jdbc:mysql://localhost:3306/booking"
        username="root"
        password="password"/>
</Context>