.hotel-name {
    font-size: 1.8em;
    font-weight: bold;
    display: inline;
}

.hotel-location {
    font-style: italic;
    cursor: pointer;
    color: #669900;
}

.hotel-gallery {
    background-color: #F2F4F8;
    border-top: 1px solid;
    margin: 1em;
    padding: 1em;
}

.location-map-pin {
	background-image: url(../images/map-pin.png);
	height: 26px;
	width: 17px;
	display: inline-block;
}

.hotel-service-list {
	display: block;
	padding: 0.5em;
}

.hotel-service-list .service {
	background-image: url(../images/services.png);
	height: 40px;
	width: 40px;
	display: inline-block;
	background-position: -106px -56px;
}

.hotel-gallery a{
	text-decoration: none;
}

.hotel-gallery img {
	max-height: 100px;
} 

.hotel-description {
    font-weight: normal;
    margin: 1em;
    text-align: left;
}


#map-dialog {
	display: none;
	position: absolute;
	box-shadow: 0 0 0 10px rgba(0, 0, 0, 0.45);
	left: 50px;
	right: 30px;
	bottom: 30px;
	top: 50px;
	z-index: 999;
}

#map-dialog #close-map-btn {
	background: url("../images/map-icons.png") no-repeat scroll -147px 0 rgba(0, 0, 0, 0);
    cursor: pointer;
    height: 24px;
    position: absolute;
    right: -16px;
    top: -16px;
    width: 24px;
    z-index: 5;
}

#map-dialog #map-canvas {
	display: block !important;
	width: 100%;
	height: 100%;
}

span.star {
	background-image: url(../images/stars.png);
	display: inline-block;
	height: 16px;
	width: 80px;
	background-position: -80px -48px;
}
span.star-0 { background-position: -80px -48px; }
span.star-1 { background-position: -64px -48px; }
span.star-2	{ background-position: -48px -48px; }
span.star-3	{ background-position: -32px -48px; }
span.star-4	{ background-position: -16px -48px; }
span.star-5	{ background-position: 0 -48px; }

/*  
	search for styles ---------------------------------------------------------------------
*/


.booking-search-form {
	background-color: #E6EDF6;
	border-radius: 5px 5px 0 0;
}

.booking-search-form-header {
    background-color: #F2F5F9;
    border-radius: 5px 5px 0 0;
}

.booking-container {
	margin: 1em 0;
}

.date-selectors .home-in, 
.date-selectors .home-out {
	display: inline-block;
	padding: 0.5em;
}



.booking-search-form-header h2 {
    font-size: 1.4em;
    font-weight: normal;
    margin: 0;
    padding: 0.5em 1em;
}

.date-selectors {
    display: inline-block;
}


.search-button {
    display: inline-block;
    padding: 0 1em 1em;
}

.search-button a {
	text-decoration: underline;
	color: #0896FF;
    font-weight: bold;
}

.search-button a:HOVER {
	color: #FFCA56;
}

.booking-search-results {
	vertical-align: top;
}

.booking-search-results .booking-table-conatiner {
	border-bottom: 1px solid #96B2D9;
}

.booking-search-results table {
	border-left: 1px solid #96B2D9;
	border-right: 1px solid #96B2D9;
	border-bottom: 1px solid #96B2D9;
	border-spacing: 0;
	border-collapse: collapse;
	width: 100%;
}


.booking-search-results th {
	background-color: #537CB4;
    padding: 6px 8px;
    color: #FFFFFF;
    font-weight: bold;
    margin: 0;
    padding: 3px 8px;
    border-left: 1px solid #96B2D9;
    vertical-align: top;
    padding: 0.5em;
}

.booking-search-results td {
	border-top: 1px solid #96B2D9;
	vertical-align: top;
	padding: 0.5em;
	text-align: center;
}

.booking-search-results td.room-type{
	color: #0896FF;
    font-weight: bold;
    font-size: 120%;
}

.booking-search-results td.cost {
	font-size: 150%;
 	color: #339900;
    font-weight: bold;
    text-align: right;
}


.booking-search-results td.booking-cell {
	border-left: 1px solid #96B2D9;
}

.booking-search-results .booking-rooms-block,
.booking-search-results .booking-block {
	display: inline-block;
} 

.booking-search-results #booking-form-book-btn{
    background-color: #0896FF !important;
    border: 2px solid #FFFFFF !important;
    border-radius: 3px;
    box-shadow: 0 0 3px #AAAAAA !important;
    color: #FFFFFF;
    cursor: pointer;
    font-weight: bold;
    line-height: 1.5;
    margin: 1em;
    padding: 5px 10px !important;
    text-decoration: none;
    vertical-align: middle;
}

.booking-search-results #booking-form-total-price {
	color: #0896FF;
    display: block;
    font-size: 22px;
    margin: 3px 0 5px;
}

.booking-search-results #user-info-form {
	text-align: left;
}

.booking-search-results #user-info-form .label {
	text-align: left;
	margin: 0 0 0.2em 1em;
	font-weight: bold;
	color: #003580 !important;
	font-size: 100% !important;
}

.booking-search-results #user-info-form .booking-form-field {
	width: 95%;
	color: #003580;
}

.booking-search-results .success-book,
.booking-search-results .error-book {
	padding: 15px;
	margin-bottom: 20px;
	border: 1px solid transparent
}

.booking-search-results .success-book {
	background-color: #dff0d8;
	border-color: #d6e9c6;
	color: #3c763d;
}

.booking-search-results .error-book {
	background-color: #f2dede;
	border-color: #ebccd1;
	color: #a94442;
}

.favorite-icon {
	width: 20px;
	height: 20px;
	font-size: 20px;
}

.comment-block {
	margin-bottom: 2em;
}

.input-error {
    color: #FF0000;
    display: none;
}
