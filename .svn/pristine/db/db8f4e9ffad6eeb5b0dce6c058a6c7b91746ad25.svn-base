html, body {
	height: 100%;
}

body {
	background: #FFFFFF url(../images/top-bg.png) repeat-x;
	color: #003580;
	font-family: "Times New Roman", Times, serif;
	font-size: 14px;
	letter-spacing: 0.05em;
	margin: 0;
	padding: 0;
	background-position: 0 -50px;
	min-width: 1000px

}

.wrapper {
	margin-bottom: -5em;
    min-height: 96%;
    padding-bottom: 2em;
}

a {
	outline: none;
}

img {
	border: 0;
}

p {
	letter-spacing: 0.05em;
	line-height: 24px;
	margin: 0;
	text-align: justify;
}

p a {
	color: #636466;
}

#header,#body {
	margin: 0 auto;
	max-width: 1110px;
	min-width: 800px;
}

#header {
	height: 50px;
	overflow: visible;
	padding: 5px 0 0;
}

#header div.logo{
	display: inline-block;
}

#header ul {
	font-family: Arial, Helvetica, sans-serif;
	float: right;
	list-style: none;
	margin: 0;
	overflow: visible;
	padding: 10px 36px 0 0;
}

#header ul li {
	border-left: 1px solid #124690;
	float: left;
	height: 25px;
	padding: 0 15px;
	color: #CED5E0;
}

#header ul li.current a,#header ul li a:hover {
	color: #CED5E0;
}

#header ul li:first-child {
	border: none;
}

#header ul li a {
	color: #CED5E0;
	display: block;
	letter-spacing: 0.075em;
	line-height: 20px;
	text-decoration: none;
}

#header .header-user-name {
 	max-width: 200px;
    overflow: hidden;
    cursor: pointer;
}

#header .header-user-name .caret {
	border-top-color: white;
}


#header .header-user-name a {
	letter-spacing: 0.05em;
}

#header .header-user-name:HOVER {
	color: #FCA903;
}

#header .btn-group{
	position: relative;
	display: inline-block;
	vertical-align: middle;
}

#header .dropdown-menu {
	position: absolute;
	top: 100%;
	left: 0;
	z-index: 1000;
	display: none;
	float: left;
	min-width: 160px;
	padding: 5px 0;
	margin: 2px 0 0;
	list-style: none;
	font-size: 14px;
	background-color: #fff;
	border: 1px solid #ccc;
	border: 1px solid rgba(0,0,0,.15);
	background-clip: padding-box;
}

#header .dropdown-menu li {
	height: auto;
 	border: medium none;
    color: #124690;
    display: list-item;
    float: none;
	display: list-item;
	text-align: -webkit-match-parent;
}

#header .dropdown-menu li a {
	color: #124690;
}

#header .dropdown-menu li a:HOVER {
	color: #FCA903;
}

#header .dropdown-menu .divider {
	height: 1px;
	margin: 9px 0;
	overflow: hidden;
	background-color: #e5e5e5;
}

#body {
	padding: 30px 0 40px;
	overflow: hidden;

}

#footer {
	height: 5em;
	width: 100%;
	background: none repeat scroll 0 0 #003580;
	text-align: center;
	color: white;
}

#footer .left, #footer .middle, #footer .right {
	display: inline-block;
	width: 30%;
}

#footer .left {
	border-right: 1px dotted #003580;
}

#footer .right {
	border-left: 1px dotted #003580
}

#footer .extranet, #footer .socials, #footer .copiright {
	display: block;
	padding: 1em;
}


#footer .extranet a {
	text-decoration: none;
	font-size: 1.2em;
	color: white;
}

#footer .extranet a:HOVER {
	color: #DAA300;
}

#footer .socials a{
    -moz-border-radius: .188em;
    -webkit-border-radius: .188em;
    background: url("../images/social.png") no-repeat 0 -1px;
    border-radius: .25em;
    cursor: pointer;
    display: inline-block;
    height: 31px;
    width: 32px;
}
#footer .socials a:hover{
    -moz-box-shadow: 0 0 .313em #fff;
    -moz-transition: all .2s ease-in-out;
    -o-transition: all .2s ease-in-out;
    -webkit-box-shadow: 0 0 .313em #fff;
    -webkit-transition: all .2s ease-in-out;
    box-shadow: 0 0 .313em #fff;
    transition: all .2s ease-in-out;
}
#footer .socials a:nth-of-type(2){
    background-position: -32px 0px;
}
#footer .socials a:nth-of-type(3){
    background-position: -64px 0;
}
#footer .socials a:nth-of-type(4){
    background-position: -96px 0px;
}